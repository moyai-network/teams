          "texture": "textures/ui/Black",
          "alpha": 0.35,
          "size": [
            "100%cm",
            "100%c"
          ],
          "controls": [
            {
              "displayed_objective": {
                "type": "label",
                "size": [
                  "default",
                  10
                ],
                "text": "#objective_sidebar_name",
